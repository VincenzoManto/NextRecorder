{
  "name": "NEXT Recorder",
  "version": "1.0",
  "description": "Registriamo NEXT",
  "background": {
    "scripts": [
      "background.js" 
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Registriamo!"
  },
  "content_scripts": [
    {
      
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*/*"
      ],
      "js":["jquery-3.7.1.min.js","tooltip.js","myScript.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "style.css",
    "style-play.css",
    "next.png"
  ],
  "permissions": [
    "tabs",
    "alarms",
    "contextMenus",
    "storage",
    "activeTab",
    "<all_urls>",
    "scripting",
    "http://*/*", "https://*/*", "file:///*/*"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "manifest_version": 2
}